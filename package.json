{
  "name": "vscode-cmake-lint",
  "displayName": "CMake-Lint",
  "description": "Scan CMake scripts for lint",
  "version": "0.0.0",
  "publisher": "brobeson",
  "author": {
    "name": "brobeson",
    "url": "https://brobeson.github.io"
  },
  "homepage": "https://brobeson.github.io/vscode-cmake-lint",
  "bugs": {
    "url": "https://github.com/brobeson/vscode-cmake-lint/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brobeson/vscode-cmake-lint.git"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "license": "MIT",
  "categories": [
    "Linters"
  ],
  "keywords": [
    "cmake",
    "cmake-lint"
  ],
  "activationEvents": [
    "onLanguage:cmake",
    "workspaceContains:**/CMakeLists.txt",
    "workspaceContains:**/*.cmake"
  ],
  "main": "./out/extension.js",
  "extensionKind": [
    "workspace"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cmakeLint.scanAllFiles",
        "title": "Scan all CMake Files",
        "category": "CMake Lint"
      },
      {
        "command": "cmakeLint.scanActiveFile",
        "title": "Scan the Current File",
        "category": "CMake Lint"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "proseWrap": "always"
  }
}
